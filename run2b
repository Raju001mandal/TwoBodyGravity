
set terminal wxt background 'black'



unset key
unset tics

unset border

set xrange[-60:60]

set yrange[-1000:10]



set palette model HSV rgbformulae 3,2,2





unset colorbox


do for [ii=1:1001] {
     
     
     set multiplot layout 1,1
     
     
     plot 'twobody.dat' using 3:4:2 every ::1::ii w l lt 3 lw 2 lc palette
     plot 'twobody.dat' using 3:4:2 every ::ii::ii w p pt 7 ps 1 lc rgb "yellow"
     
     
     plot 'twobody.dat' using 1:2:3 every ::1::ii w l lt 3 lw 2 lc rgb "white"
     plot 'twobody.dat' using 1:2:3 every ::ii::ii w p pt 7 ps 4 lc rgb "white"
   
     unset multiplot
     
   
     
}
     
     
